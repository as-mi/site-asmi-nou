@{
    var ProjDataList = ViewData["ProjData"] as List<ASMI.Controllers.HomeController.ProjData>;
    
}

<div class="inner mt-5">
    <header class="special">
        <h2><b>Proiecte</b></h2>
        <p>
            Munca noastră este prezentarea aptitudinilor noastre.
        </p>
    </header>

    <div class="highlights justify-content-around">
        @foreach (ASMI.Controllers.HomeController.ProjData ProjData in ProjDataList)
        {
            @if (ProjData.img != null)
            {
                <section>
                    <div class="project-content content">

                        <div class="project-media-ctn">


                            <a href="@ProjData.url">


                                <img src="/images/@ProjData.img" class="project-logo" />


                            </a>


                        </div>



                        <h3>@ProjData.name</h3>
                        <p>
                            @ProjData.desc
                        </p>


                    </div>

                </section>
            }
        }
    </div>

    
    @foreach (ASMI.Controllers.HomeController.ProjData ProjData in ProjDataList)
    {

        @if (ProjData.img == null)
        {

            <section>

                <h3>@ProjData.name</h3>
                <p>
                    @ProjData.desc
                </p>
            </section>
        }



    }

</div>