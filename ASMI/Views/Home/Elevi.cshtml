@section Styles{
	<link rel="stylesheet" href="~/css/elevi.css" />
}

@{
	ViewData["Title"] = "Elevi"; 
}



<div class="container px-5 py-5">
	<div class="row">
		<h2>Pentru Elevi</h2>
	</div>

	<div class="row">
		<p>
			<strong>ASMI</strong> credem în puterea educației și a curiozității. De aceea, organizăm proiecte dedicate elevilor pasionați de matematică, informatică și nu numai. Fie că este vorba de <strong>ateliere</strong> interactive, <strong>concursuri</strong>, sesiuni de <strong>mentorat</strong> sau evenimente creative, ne dorim să oferim experiențe care să inspire și să deschidă noi orizonturi.

			<br /><br />Explorează mai jos câteva dintre inițiativele noastre și vezi cum poți face parte din ele!
		</p>
	</div>
	<div class="row pt-3 d-flex justify-content-between">

		@foreach (Proiect proiect in ViewBag.Proiecte)
		{
			<div class="card card-bubblesBg card-rounded col-sm-6 col-lg-5 col-12 py-4">

				<div class="w-50 mx-auto">
					<img src="../images/artandar-.png" class="img-fluid"/>
				</div>

				<div class="card-body d-flex flex-column justify-content-between">
					<div class="card-title">
						<h2 class="m-0">@proiect.Name</h2>
						</div>

					<p class="text-muted mb-3 ">Data Eveniment: @(proiect.Date.HasValue ? proiect.Date?.ToString("MM/dd/yyyy") : "TBA")</p>

					<div class="card-text text-center mb-4">@proiect.Description</div>
					<div class="d-flex justify-content-center just-self-end mx-auto more-button">
						<a href="@proiect.WebSite" class="btn btn-primary-outline py-3">
							<span class="mx-3">Afla mai multe</span>
						</a>
					</div>
				</div>

			</div>
		}


	</div>
</div>

