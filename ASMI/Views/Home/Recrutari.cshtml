@{
    bool avemRecrutari = true;
}

<div id="containerMain" class="container m-0 mw-100">
    @if (avemRecrutari)
    {
        <div class="text-center">
            <h2 class="font-weight-bold" style="color:white">Te așteptăm în echipa noastră!</h2>

            <h3>Înscrieri disponibile: <span style="color:rgb(49, 144, 191);">Începând cu 24 martie 2025</span></h3>

            <a href="https://forms.gle/ob1ZABKpKZryFJB5A" class="btn-lg btn-primary font-weight-bold" target="_blank">
                <span style="color: white;">Înscrie-te aici!</span>
            </a>

            <br />
            <br />

            <div id="countdown">
                <h3 id="amr">Au mai rămas:</h3>
                <ul style="color: white">
                    <li class="clock"><span id="days"></span>zile</li>
                    <li class="clock"><span id="hours"></span>ore</li>
                    <li class="clock"><span id="minutes"></span>minute</li>
                    <li class="clock"><span id="seconds"></span>secunde</li>
                </ul>
            </div>
            <div id="content" class="emoji">
                <h2>Momentan formularul este închis. Te așteptăm la următoarea sesiune de recrutări!</h2>
            </div>
        </div>
    }
    else
    {
        <div class="text-center">
            <h2 class="font-weight-bold">Momentan, sesiunea de recrutări a luat sfârșit!</h2>
            <h3>Fii pe fază pentru următoarea sesiune!</h3>
        </div>
    }

    <div class="text-center">
        <h2 class="font-weight-bold" style="color: white">Unde te-ai potrivi cel mai mult?</h2>
        <button id="revealButton" class="btn btn-primary mb-5">
            <span style="color: white;">Descoperă-ți locul potrivit în echipa noastră!</span>
        </button>
        <div class="lightbox-gallery overflow-hidden">
            <div id="hiddenPic" style="display: none">
                <div class="lightbox-gallery">
                    <div class="container">
                        <div class="mario"></div>
                        <div class="mario_tunnels"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById("revealButton").addEventListener("click", function () {
            var hiddenPic = document.getElementById("hiddenPic");
            var mario = document.querySelector(".mario");
            hiddenPic.style.display = "block";

            mario.addEventListener("animationend", function () {
                window.location.href = "https:www.remove.bg/ro/uploads";
            }, { once: true });
        });
    </script>

    <script>
        (function () {
            const second = 1000,
                minute = second * 60,
                hour = minute * 60,
                day = hour * 24;

            let birthday = "28 Martie, 2025 23:59:59",
                countDown = new Date(birthday).getTime(),
                x = setInterval(function () {

                    let now = new Date().getTime(),
                        distance = countDown - now;

                    //do something later when date is reached
                    if (distance < 0) {
                        clearInterval(x);
                    } else {
                        document.getElementById("days").innerText = Math.floor(distance / (day)),
                            document.getElementById("hours").innerText = Math.floor((distance % (day)) / (hour)),
                            document.getElementById("minutes").innerText = Math.floor((distance % (hour)) / (minute)),
                            document.getElementById("seconds").innerText = Math.floor((distance % (minute)) / second);
                    }
                    //seconds
                }, 0)
        }());
    </script>
</div>
